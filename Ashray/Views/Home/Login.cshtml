@model Ashray.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Login <span class="text-danger"> Form</span></h2>
        <ol class="breadcrumb">
            <li>
                <a href="index">Home</a>
            </li>

            <li class="active">
                <strong>Login Form</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<br>

<div class="ibox-content">
    <div class="row">
		<div class="col-sm-6 b-r">
			<h3 class="m-t-none m-b text-navy">Sign in</h3>
			<p class="text-danger">Log In With Your My Truck Account Details</p>
			@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
			{
		<div class="form-group"><label>Mobile No</label> @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @style = "position:relative", @class = "form-control" })</div>
		<div class="form-group"><label>Password</label> @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @style = "position:relative", @class = "form-control" })</div>
				<div>
					<button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Log in</strong></button>
					<label> Forget Password? </label><br><br>
					<br>
					@*<p>Don't have account with My Truck.<a href="#"> Sign up Here</a>s</p>*@
				</div>
			}
		</div>
        <div class="col-sm-6">
            <h4>Not a member?</h4>
            <p>You can create an account:</p>
            <p class="text-center">
                <a href="@Url.Action("Registration", "Home")"><i class="fa fa-sign-in big-icon"></i></a>
            </p>
        </div>
    </div>
</div>

