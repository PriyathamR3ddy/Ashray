                    <div class="col-lg-12" style="padding:0px 10px; margin:5px;">
                        <div class="widget style1 yellow-bg" style="padding:11px; margin:3px;">
                            <div class="row">
                                <div class="col-xs-4">
                                    <i class="fa fa-female fa-4x"></i>
                                </div>
                                <div class="col-xs-8 text-right">
                                    <span>Total no.of Females</span>
                                    <h2 class="font-bold">@Model.FemaleCount</h2>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-12">

                <div>
                    <div class="col-lg-12" style=" padding:10px 10px 10px 0px;">
                        <div class="table-bed-details" style="background: white;overflow-y: auto;max-height: 475px;">
                            <table class="table table-striped">
                                <thead class="bg-success">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => @Model.PatientDashboard[0].RoomNumber)</th>
                                        <th>@Html.DisplayNameFor(model => @Model.PatientDashboard[0].PatientName)</th>
                                        <th>@Html.DisplayNameFor(model => @Model.PatientDashboard[0].Gender)</th>
                                        <th>@Html.DisplayNameFor(model => @Model.PatientDashboard[0].PositiveDate)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PatientDashboard)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoomNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PatientName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PositiveDate)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
